<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      </ul>
    </div>
  <% end %>
  <% end %>
  
  <%= f.label :full_name, 'Full Name:', for: "res-name", class: "inline" %>
  <%= f.text_field :full_name, id: "res-name", placeholder: "full name", class: "input" %>
  <br/>
  
    <%= f.label :email, 'Email:', class: "inline" %>
    <%= f.text_field :email, placeholder: "email address", class: "input" %>
  <br/>
  
    <%= f.label :password, 'Password:', class: "inline" %>
    <%= f.text_field :password, placeholder: "password", class: "input" %>
  <br/>
  
    <%= f.label :password_confirmation, 'Confirm Password:', class: "inline" %>
    <%= f.text_field :password_confirmation, placeholder: "password", class: "input"  %>
  <br/>
  
  <%= f.submit 'Sign Up' %>
<% end %>
