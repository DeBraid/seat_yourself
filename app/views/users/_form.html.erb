


<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      </ul>
    </div>
  <% end %>
<% end %>

  <li class="field">
    <%= f.label :full_name, 'Full Name:', for: "res-full_name", class: "inline" %>
    <%= f.text_field :full_name, id: "res-full_name", placeholder: "full name", class: "input" %>
  </li>

  <li class="field">
    <%= f.label :email, 'Email:', class: "inline", for: "res-email"  %>
    <%= f.text_field :email,  id: "email", placeholder: "restaurant address", class: "input" %>
  </li>

  <li class="field prepend">
    <%= f.label :password, 'Password:', class: "inline", for: "res-name"  %>
    <br>
    <span class="adjoined">@</span>
    <%= f.text_field :password, type: "password", id: "password", placeholder: "restaurant address", class: "input" %>
  </li>
  
  <li class="field prepend">
    <%= f.label :password_confirmation, 'Confirm Password:', class: "inline"  %>
    <br>
    <span class="adjoined">@</span>
    <%= f.text_field :password_confirmation, type: "password", placeholder: "restaurant address", class: "input" %>
  </li>
  
  <li class="field">
  <%= f.submit 'Sign Up', class: "medium metro rounded btn default", type: "submit" %>
  </li>

<% end %>

