<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      </ul>
    </div>
  <% end %>
  <% end %>
  <li>class="field"</li>
    <%= f.label :full_name, 'Full Name:', for: "res-name", class: "inline" %>
    <%= f.text_field :full_name, id: "res-name", placeholder: "full name", class: "input" %>
  <br/>
  <li>class="field"</li>
    <%= f.label :email, 'Email:' %>
    <%= f.text_field :email %>
  <br/>
  <li>class="field"</li>
    <%= f.label :password, 'Password:' %>
    <%= f.text_field :password %>
  <br/>
  <li>class="field"</li>
    <%= f.label :password_confirmation, 'Confirm Password:' %>
    <%= f.text_field :password_confirmation %>
  <br/>
  <li>class="field"</li>
  <%= f.submit 'Sign Up' %>
<% end %>
