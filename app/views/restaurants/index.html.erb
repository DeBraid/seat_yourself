<h1> All Restaurants </h1>



<% @restaurants.each do |restaurant| %>
<div class="rest_block">
  <%= link_to(restaurant.name, restaurant)  %>
  <br/>
  <%= restaurant.address %>
  <br/>
  <%= restaurant.city %>
  <br/>
  <%= restaurant.postal_code %>
  <br/>
</div>
<% end %>

<button><%= link_to("Create a Restaurant", new_restaurant_path) %></button>
